" Settings "{{{
" scroll中にマウスカーソルを表示する
set noautohidecursor
let blacklists = ["https://mail.google.com/*","https://docs.google.com/*","https://www.google.com/calendar/*","https://trello.com/*","https://script.google.com/*","https://go-tour-jp.appspot.com/*","https://play.golang.org/*","https://toggl.com/*"]
let mapleader = ","
let locale = "jp"
let hintcharacters = "hjklasdfgyuiopqwertnmzxcvb"
" command bar position
let barposition = "bottom"
set nosmoothscroll
" }}}"

" Move "{{{
map <C-u> scrollPageUp
map <C-d> scrollPageDown
" }}}"

" Navigation "{{{
map <C-n> nextTab
map <C-p> previousTab
" }}}"

" Text boxes "{{{
" 入力系のmapを全て解除
iunmapAll
" }}}"

" for mac
let homedirectory = '/Users/moqada'
let configpath = '~/.cvimrc'
set localconfig
